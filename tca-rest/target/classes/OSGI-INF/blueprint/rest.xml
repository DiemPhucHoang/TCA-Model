<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
             http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
             ">

    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

<!--    <jaxrs:server id="tcaRest" address="/api/tca">-->
<!--        <jaxrs:serviceBeans>-->
<!--            <ref component-id="tcaBean" />-->
<!--        </jaxrs:serviceBeans>-->
<!--        <jaxrs:providers>-->
<!--            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>-->
<!--        </jaxrs:providers>-->
<!--    </jaxrs:server>-->

    <jaxrs:server id="tcaRest" address="/api/tca">
        <jaxrs:serviceBeans>
            <ref component-id="centralizedBean" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>


<!--    <reference id="modelService" interface="org.example.tca.service.ModelService"/>-->
<!--    <reference id="thresholdService" interface="org.example.tca.service.ThresholdService"/>-->

    <reference id="centralizedService" interface="org.example.tca.service.CentralizedService"/>

    <bean id="tcaBean" class="org.example.tca.rest.impl.ModelRestImpl" >
        <argument ref="centralizedService"/>
    </bean>

    <bean id="thresholdBean" class="org.example.tca.rest.impl.ThresholdRestImpl" >
        <argument ref="centralizedService"/>
    </bean>

    <bean id="centralizedBean" class="org.example.tca.rest.impl.CentralizedRestImpl" >
        <argument ref="tcaBean"/>
        <argument ref="thresholdBean"/>
    </bean>

</blueprint>